<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/add_transaction_form_account"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:hint="Account"
        app:met_floatingLabel="normal"
        app:met_floatingLabelText="Account"
        app:met_accentTypeface="fonts/Roboto-Regular.ttf"
        app:met_typeface="fonts/Roboto-Regular.ttf"
        app:met_iconLeft="@drawable/account"
        app:met_baseColor="@color/colorPrimary"/>


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/add_transaction_form_payment_type"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:hint="Credit/Debit"
        app:met_floatingLabel="normal"
        app:met_floatingLabelText="Credit/Debit"
        app:met_accentTypeface="fonts/Roboto-Regular.ttf"
        app:met_typeface="fonts/Roboto-Regular.ttf"
        app:met_iconLeft="@drawable/payment"
        app:met_baseColor="@color/colorPrimary"/>


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/add_transaction_form_merchant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:hint="Merchant/Organization"
        app:met_floatingLabel="normal"
        app:met_floatingLabelText="Merchant/Organization"
        app:met_accentTypeface="fonts/Roboto-Regular.ttf"
        app:met_typeface="fonts/Roboto-Regular.ttf"
        app:met_iconLeft="@drawable/merchant"
        app:met_baseColor="@color/colorPrimary"/>


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/add_transaction_form_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:hint="Amount"
        android:inputType="numberDecimal"
        app:met_floatingLabel="normal"
        app:met_floatingLabelText="Amount"
        app:met_accentTypeface="fonts/Roboto-Regular.ttf"
        app:met_typeface="fonts/Roboto-Regular.ttf"
        app:met_iconLeft="@drawable/amount"
        app:met_baseColor="@color/colorPrimary"/>


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/add_transaction_form_date"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:hint="Date"
        app:met_floatingLabel="normal"
        app:met_floatingLabelText="Date"
        app:met_accentTypeface="fonts/Roboto-Regular.ttf"
        app:met_typeface="fonts/Roboto-Regular.ttf"
        app:met_iconLeft="@drawable/date"
        app:met_baseColor="@color/colorPrimary"/>


</LinearLayout>